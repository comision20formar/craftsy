<!DOCTYPE html>
<html lang="en">

<%- include('partials/head',{
    title : 'HOME'
}) %>

<body class="home">
    <%- include('partials/header') %>

    <div class="home__banner">
        <img src="/images/banner/banner_1.jpg" alt="">
    </div>
    <div class="row">

        <main class="col-12 col-md-8">

            <% sections.forEach(section => { %>
                <h3 class="mt-5"><%= section.name.toUpperCase() %></h3>
                <hr>
                <section class="row">
                <% section.products.forEach(product => { %>
                      <%- include('./partials/cardProduct', {
                        product
                      }) %>
                   
                <% }) %>
                </section>
            <% }) %>

          
        </main>

        <aside class="col-12 col-md-4 mt-4">
            <section class="home__aside__section">
               <!--  <h3>Tutoriales</h3> -->
                <% tutorials.forEach(tutorial => { %>
                    <article class="home__aside__section__article">
                        <img src="/images/<%= tutorial.image %>" alt="Imagen tutorial 1">
                        <div class="home__aside__section__article--name">
                            <h5><%= tutorial.name %></h5>
                            <span><%= tutorial.message %></span>
                        </div>
                    </article>

                <% }) %>
               
              
            </section>
            <section class="home__aside__section">
                <h3>Publicidad</h3>
                <div class="home__aside__section--ads">
                    <img src="/images/ad-01.jpg" alt="imagen publicidad 1">
                    <img src="/images/ad-02.jpg" alt="imagen publicidad 2">
                </div>
            </section>
        </aside>
    </div>
    <div class="home__carousel">
        <div class="glider-contain" >
            <div class="glider">
               

                   
              
            </div>

            <button aria-label="Previous" class="glider-prev">«</button>
            <button aria-label="Next" class="glider-next">»</button>
            <div role="tablist" class="dots"></div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="/javascripts/glider.js"></script>
    <script src="/javascripts/gliderCarousel.js"></script>
    <script src="/javascripts/index.js"></script>

</body>

</html>