<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head',{
        title : 'LOGIN'
    }) %>

<body class="login">
    <%- include('partials/header') %>

    <main class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-6 mx-auto">
                <div class="card shadow">
                  <div class="card-body">
                    <h3>Iniciá sesión</h3>
                    <hr>
                    <form class="row" action="">
                        <div class="col-12 mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="forms__control--input" type="email" id="email" name="email">
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label" for="password">Contraseña</label>
                            <input class="forms__control--input" type="password" id="password" name="password">
                            <a class="text-dark small" href="">Olvidé mi contraseña</a>
                        </div>
                      
                        <div class="d-flex justify-content-around">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="remember">
                                <label class="form-check-label" for="remember">
                                  Recordame
                                </label>
                              </div>
                            <button class="buttons__primary">Ingresá</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>