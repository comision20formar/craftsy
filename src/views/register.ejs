<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head',{ title : 'REGISTER' }) %>

  <body class="register">
    <%- include('partials/header') %>

    <main class="container mt-5">
      <div class="row">
        <div class="col-12 col-md-10 col-lg-8 mx-auto">
          <div class="card shadow">
            <div class="card-body">
              <h3>Registrate</h3>
              <hr />
              <form class="row" method="POST" id="formRegister">
                <div class="col-12 col-md-6 mb-3">
                  <label class="form-label" for="name">Nombre</label>
                  <input
                    class="form-control  <%= locals.errors && (errors.name && 'is-invalid') %>"
                    type="text"
                    id="name"
                    name="name"
                    value="<%= locals.old && (old.name && old.name) %>"
                  />
                  <small id="msgError-name" class="ms-2 text-danger"><%= locals.errors && (errors.name && errors.name.msg) %></small>
                </div>
                <div class="col-12 col-md-6 mb-3">
                  <label class="form-label" for="surname">Apellido</label>
                  <input
                    class="form-control <%= locals.errors && (errors.surname && 'is-invalid') %>"
                    type="text"
                    id="surname"
                    name="surname"
                    value="<%= locals.old && (old.surname&& old.surname) %>"
                  />
                  <small  id="msgError-surname"  class="ms-2 text-danger"><%= locals.errors && (errors.surname && errors.surname.msg) %></small>

                </div>
                <div class="col-12 mb-3">
                  <label class="form-label" for="email">Email</label>
                  <input
                    class="form-control <%= locals.errors && (errors.email && 'is-invalid') %>"
                    type="email"
                    id="email"
                    name="email"
                    value="<%= locals.old && (old.email && old.email) %>"
                  />
                  <small  id="msgError-email"  class="ms-2 text-danger"><%= locals.errors && (errors.email && errors.email.msg) %></small>

                </div>
                <div class="col-12 col-md-6 mb-3">
                  <label class="form-label" for="password">Contraseña</label>

                  <div class="input-group mb-3">
                    <input
                    class="form-control <%= locals.errors && (errors.password && 'is-invalid') %>"
                    type="password"
                    id="password"
                    name="password"
                  />                    
                  <span class="input-group-text"><i id="viewPassword" class="fa fa-eye"></i></span>
                  </div>
                  
                 
                  <small  id="msgError-password"  class="ms-2 text-danger"><%= locals.errors && (errors.password && errors.password.msg) %></small>

                </div>
                <div class="col-12 col-md-6 mb-3">
                  <label class="form-label" for="password2"
                    >Confirma contraseña</label
                  >
                  <input
                    class="form-control <%= locals.errors && (errors.password2 && 'is-invalid') %>"
                    type="password"
                    id="password2"
                    name="password2"
                  />
                  <small  id="msgError-password2"  class="ms-2 text-danger"><%= locals.errors && (errors.password2 && errors.password2.msg) %></small>

                </div>
                <div class="d-flex justify-content-between">
                  <small  id="msgError-empty"  class="ms-2 text-danger"></small>
                  <button class="btn btn-dark" type="submit">Registrate</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script src="/javascripts/validationRegister.js"></script>
  </body>
</html>
